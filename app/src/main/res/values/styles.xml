<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!--<item name="editTextColor">@style/Text</item>-->
        <item name="materialButtonStyle">@style/Buttons</item>

    </style>
    <!-- Base application theme. -->

    <style name="ShrineTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearanceShrine</item>
        <item name="hintTextColor">@color/primaryColor</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/secondaryLightColor</item>

    </style>


    <style name="TextAppearanceShrine" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/primaryLightColor</item>
    </style>

    <style name="Buttons" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/secondaryColor</item>
        <item name="rippleColor">@color/secondaryDarkColor</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/secondaryDarkColor</item>
        <item name="elevation">5dp</item>
    </style>


</resources>
